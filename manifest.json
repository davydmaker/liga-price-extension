{
  "manifest_version": 3,
  "name": "LigaPrice",
  "short_name": "LigaPrice",
  "version": "1.1.0",
  "description": "Busque preços de cartas em todas as lojas da Liga (Magic, DragonBall, Vanguard, FAB, YuGiOh, Pokemon)",
  "author": "davydmaker",
  "homepage_url": "https://github.com/davydmaker/liga-price-extension",
  "permissions": [
    "downloads",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://ligamagic.com.br/*",
    "https://masters.ligadragonball.com.br/*",
    "https://fusion.ligadragonball.com.br/*",
    "https://ligavanguard.com.br/*",
    "https://ligafab.com.br/*",
    "https://ligayugioh.com.br/*",
    "https://ligapokemon.com.br/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "legal.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "LigaPrice - Buscar preços de cartas",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}