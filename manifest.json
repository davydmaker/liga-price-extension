{
  "manifest_version": 3,
  "name": "LigaPrice",
  "short_name": "LigaPrice",
  "version": "1.2.2",
  "description": "Busque preços de cartas em todas as lojas da Liga (Magic, Pokemon, YuGiOh, OnePiece, FAB, Lorcana, DragonBall, Vanguard, StarWars, Digimon)",
  "author": "davydmaker",
  "homepage_url": "https://github.com/davydmaker/liga-price-extension",
  "permissions": [
    "downloads",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://www.ligamagic.com.br/*",
    "https://masters.ligadragonball.com.br/*",
    "https://fusion.ligadragonball.com.br/*",
    "https://www.ligavanguard.com.br/*",
    "https://www.ligafab.com.br/*",
    "https://www.ligayugioh.com.br/*",
    "https://www.ligaonepiece.com.br/*",
    "https://www.ligapokemon.com.br/*",
    "https://www.ligastarwars.com.br/*",
    "https://www.ligadigimon.com.br/*",
    "https://www.ligalorcana.com.br/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "legal.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "LigaPrice - Buscar preços de cartas",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "34": "icons/icon-34.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "34": "icons/icon-34.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}